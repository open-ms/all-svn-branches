#!

echo "#"
echo "# Run cmake with BUILD_TYPE=Release.  Then remove optimization flags in CMakeCache.txt by using this script.  Then run cmake again."
echo "#"
echo "# before:"
grep '\-O[0-9]\ ' CMakeCache.txt
echo "#"
echo "# ... running sed ..."
echo "#"
echo "sed -i 's/-O[0-9]\ /-O0\ /g' CMakeCache.txt"
sed -i 's/-O[0-9]\ /-O0\ /g' CMakeCache.txt
echo "#"
echo "# after:"
grep '\-O[0-9]\ ' CMakeCache.txt
echo "#"

